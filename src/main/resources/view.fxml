<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.App.MainController"
      stylesheets="@styles.css">
    <!-- CSS not working yet -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="CENTER">
        <VBox>
            <Label fx:id="poly1" text="Polynomial 1"/>
            <TextField fx:id="poly1_text"/>
            <Label fx:id="poly2" text="Polynomial 2"/>
            <TextField fx:id="poly2_text"/>
        </VBox>
    </VBox>
    <VBox alignment="CENTER">
        <Label fx:id="result"/>
        <HBox spacing="20">
            <Button text="Add" onAction="#add"/>
            <Button text="Subtract" onAction="#subtract"/>
            <Button text="Multiply" onAction="#multiply"/>
            <Button text="Divide" onAction="#divide"/>
            <Button text="Differentiate" onAction="#differentiate"/>
            <Button text="Integrate" onAction="#integrate"/>
        </HBox>
    </VBox>
</VBox>
