<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.App.MainController"
      stylesheets="/styles.css">
    <!-- CSS not working yet -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox alignment="CENTER">
        <VBox>
            <Label fx:id="poly1" text="Polynomial 1"/>
            <TextField fx:id="poly1_text"/>
            <Label fx:id="poly2" text="Polynomial 2"/>
            <TextField fx:id="poly2_text"/>
        </VBox>
    </VBox>
    <HBox alignment="CENTER" spacing="30">
        <VBox alignment="CENTER">
            <HBox alignment="CENTER" spacing="10">
                <Button text="1" onAction="#button"/>
                <Button text="2" onAction="#button"/>
                <Button text="3" onAction="#button"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="4" onAction="#button"/>
                <Button text="5" onAction="#button"/>
                <Button text="6" onAction="#button"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="7" onAction="#button"/>
                <Button text="8" onAction="#button"/>
                <Button text="9" onAction="#button"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="0" onAction="#button"/>
            </HBox>
        </VBox>
        <VBox alignment="CENTER">
            <HBox alignment="CENTER" spacing="10">
                <Button text="+" onAction="#button"/>
                <Button text="-" onAction="#button"/>
                <Button text="*" onAction="#button"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="/" onAction="#button"/>
                <Button text="^" onAction="#button"/>
                <Button text="." onAction="#button"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button text="x" onAction="#button"/>
                <Button text="del" onAction="#button"/>
            </HBox>
        </VBox>
    </HBox>
    <VBox alignment="CENTER">
        <Label fx:id="result"/>
        <HBox spacing="20">
            <Button text="Add" onAction="#add"/>
            <Button text="Subtract" onAction="#subtract"/>
            <Button text="Multiply" onAction="#multiply"/>
            <Button text="Divide" onAction="#divide"/>
            <Button text="Differentiate" onAction="#differentiate"/>
            <Button text="Integral" onAction="#integrate"/>
        </HBox>
    </VBox>
</VBox>
